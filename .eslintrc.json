{
  "extends": ["eslint:recommended"],
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "overrides": [
    {
      "files": ["*.mjs"],
      "parserOptions": {
        "sourceType": "module"
      },
      "globals": {
        "__dirname": "off",
        "__filename": "off",
        "exports": "off",
        "module": "off",
        "require": "off"
      }
    }
  ]
}
